<h1>Angular Portfolio Items</h1>
<%= link_to "Create New Portfolio", new_portfolio_url %>


<% @angular_portfolio_items.each do |portfolio_item| %>

    <p>Title: <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
    <p>Subtitle: <%= portfolio_item.subtitle %></p>
    <p>Description: <%= portfolio_item.body %></p>
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <tr>
    <td><%= link_to "Edit", edit_portfolio_path(portfolio_item) %></td>
    <td>
    <%= link_to 'Destroy', portfolio_item,
              data: {
                "turbo-method": :delete,
                
              } %>
   
          <td>
    </tr>
<% end %>